{% extends 'blog.html.twig' %}

{% block h1 %}
    Vue d'un article
{% endblock %}

{% block articles %}
    <div class="card-body">
        <h1 class="card-title">{{ article.title }}</h1>
        <p>{{ article.content }}</p>
        {% for category in article.categories  %}
            <p class="badge badge-secondary" >{{ category.name }}</p>
        {% endfor %}

    </div>
    {% if is_granted("ROLE_ADMIN") %}
        <div class="text-center">
            <a type="button" href="{{ path('edit_article', {'id': article.id}) }}" class="btn btn-outline-info">Modifier</a>
            <a type="button" href="{{ path('delete_article', {'id': article.id}) }}" class="btn btn-outline-warning">Supprimer</a>
        </div>
    {% endif %}
{% endblock %}