<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        {% for i in 1..nbPage %}

            {% if loop.first %}
                {% if page > 1 %}
                    <li class="page-item"><a class="page-link" href="{{ path('list_article', {'page': page - 1 })}}">Précédent</a></li>
                {% else %}
                    <li class="page-item disabled"><a class="page-link" href="{{ path('list_article', {'page': page - 1 })}}">Précédent</a></li>
                {% endif %}
            {% endif %}

            {% if i == page %}
                <li class="page-item active disabled"><a class="page-link" href="{{ path('list_article', {'page': i })}}">{{ i }}</a></li>
            {% else %}
                <li class="page-item"><a class="page-link" href="{{ path('list_article', {'page': i })}}">{{ i }}</a></li>
            {% endif %}

            {% if loop.last %}
                {% if page < nbPage %}
                    <li class="page-item"><a class="page-link" href="{{ path('list_article', {'page': page + 1 })}}">Suivant</a></li>
                {% else %}
                    <li class="page-item disabled"><a class="page-link" href="{{ path('list_article', {'page': page + 1 })}}">Suivant</a></li>
                {% endif %}
            {% endif %}

        {% endfor %}
    </ul>
</nav>